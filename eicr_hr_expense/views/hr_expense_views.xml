<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="hr_expense_form_view_inherit" model="ir.ui.view">
			<field name="name">hr.expense.form.inherit</field>
            <field name="model">hr.expense</field>
			<field name="inherit_id" ref="hr_expense.hr_expense_form_view"/>
			<field name="arch" type="xml">
				<xpath expr="//header" position="inside">
					<field name="eicr_state" invisible="1"/>
					<button name="action_enviar_aceptacion" type="object" string="Enviar Mensaje Receptor" colspan="2" attrs="{'invisible':[('eicr_state','in', [None, 'na'])]}"/>
					<button name="action_consultar_hacienda" type="object" string="Consultar Hacienda" colspan="2" attrs="{'invisible':[('eicr_state','not in', ['aceptado', 'rechazado', 'recibido', 'error', 'procesando'])]}"/>
				</xpath>

				<xpath expr="//field[@name='employee_id']" position="after">
					<field name="partner_id" readonly="1" attrs="{'invisible':[('eicr_documento2_file','in', [False,])]}"/>
				</xpath>

				<xpath expr="//sheet[1]" position="after">
					<sheet>
						<group string="Aceptación de Gasto con Hacienda" col="2">
						<group>
							<field name="eicr_documento2_fname" invisible="1" />
							<field name="eicr_documento2_file" filename="eicr_documento2_fname" />
							<field name="eicr_aceptacion" />
							<field name="eicr_credito_iva" />
							<field name="eicr_credito_iva_condicion" />
						</group>
						<group>
							<field name="eicr_date" readonly="1"/>
							<field name="eicr_clave" readonly="1"/>
							<field name="eicr_state" readonly="1"/>

							<field name="eicr_mensaje_hacienda_fname" invisible="1" readonly="1"/>
							<field name="eicr_mensaje_hacienda_file" filename="eicr_mensaje_hacienda_fname" readonly="1"/>
							<field name="eicr_mensaje_hacienda" readonly="1"/>

							<field name="eicr_documento_fname" invisible="1" readonly="1"/>
							<field name="eicr_documento_file" filename="eicr_documento_fname" readonly="1"/>
						</group>
					</group>
					</sheet>

				</xpath>
			</field>
		</record>

